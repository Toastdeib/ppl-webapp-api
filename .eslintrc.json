{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [
        {
            "files": [ "tests/api-*.js", "tests/base-*.js", "tests/db-*.js" ],
            "rules": {
                "no-magic-numbers": [ "off" ]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "brace-style": [
            "error",
            "1tbs",
            { "allowSingleLine": true }
        ],
        "comma-dangle": [
            "error"
        ],
        "comma-spacing": [
            "error"
        ],
        "comma-style": [
            "error"
        ],
        "curly": [
            "error"
        ],
        "dot-location": [
            "error",
            "property"
        ],
        "eqeqeq": [
            "error"
        ],
        "func-call-spacing": [
            "error"
        ],
        "function-call-argument-newline": [
            "error",
            "consistent"
        ],
        "function-paren-newline": [
            "error"
        ],
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "key-spacing": [
            "error"
        ],
        "keyword-spacing": [
            "error"
        ],
        "linebreak-style": [
            "error"
        ],
        "newline-per-chained-call": [
            "error",
            { "ignoreChainWithDepth": 3 }
        ],
        "no-magic-numbers": [
            "error",
            { "ignore": [ -1, 0, 1, 2 ], "ignoreArrayIndexes": true }
        ],
        "no-multi-spaces": [
            "error",
            { "ignoreEOLComments": true }
        ],
        "no-multiple-empty-lines": [
            "error",
            { "max" : 1 }
        ],
        "no-tabs": [
            "error"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "no-var": [
            "error"
        ],
        "no-whitespace-before-property": [
            "error"
        ],
        "object-curly-newline": [
            "error"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "object-property-newline": [
            "error",
            { "allowAllPropertiesOnSameLine": true }
        ],
        "prefer-const": [
            "error"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "require-await": [
            "error"
        ],
        "semi": [
            "error"
        ],
        "semi-spacing": [
            "error"
        ],
        "sort-imports": [
            "error",
            { "ignoreCase": true, "memberSyntaxSortOrder": [ "single", "multiple", "none", "all" ] }
        ],
        "space-in-parens": [
            "error"
        ],
        "spaced-comment": [
            "error",
            "always",
            { "exceptions": ["*"] }
        ],
        "switch-colon-spacing": [
            "error"
        ],
        "template-curly-spacing": [
            "error"
        ]
    }
}
