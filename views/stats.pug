html
    head
        title Stats Viewer
        style
            include stats.css
    body
        div.header= 'Battle Statistics'
        div.container
            div.inner
                div= 'In queue: ' + matches.inQueue
                div= 'On hold: ' + matches.onHold
            div.inner
                div= 'Loss: ' + matches.loss
                div= 'Win: ' + matches.win
            div.inner
                div= 'Ash: ' + matches.ash
                div= 'Gary: ' + matches.gary
        div.container
            div.inner
                div.subheader= 'Active challengers: ' + challengers.length
                div.subheader= 'Elite-eligible challengers: ' + challengers.filter(challenger => challenger.eliteEligible).length
                each challenger in challengers
                    div(class=challenger.classes)= challenger.name + ': ' + challenger.badges
            div.inner
                div.subheader= 'Badges awarded: ' + (matches.win + matches.ash)
                each leader in leaderBadges
                    div(class=leader.classes)= leader.name + ': ' + leader.awarded
            div.inner
                div.subheader= 'Matches recorded: ' + (matches.loss + matches.win + matches.ash + matches.gary)
                each leader in leaderMatches
                    div(class=leader.classes)= leader.name + ': ' + leader.matches
